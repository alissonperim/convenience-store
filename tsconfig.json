{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"]
    },
    "allowJs": true, 
    "outDir": "./", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": false, 
    "skipLibCheck": true
  },
  "include": [
    "src/**/**/*.*.ts",
    "src/**/*.*.ts",
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
