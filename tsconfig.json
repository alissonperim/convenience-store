{
  "compilerOptions": {
    "target": "ES2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@controllers/*": ["src/controllers/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "strict": false, 
  },
  "exclude": [
    "node_modules",
  ]
}
